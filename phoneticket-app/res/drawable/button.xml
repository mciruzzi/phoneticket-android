<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

     <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/golden" />
            <stroke
                android:width="1dp"
                android:color="@color/dark_golden" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_enabled="false" >
        <shape>
            <gradient
                android:startColor="@color/gray"
                android:endColor="@color/white"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/dark_golden" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/golden"
                android:endColor="@color/light_golden"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/dark_golden" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/golden"
                android:endColor="@color/light_golden"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/dark_golden" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>     	
</selector>