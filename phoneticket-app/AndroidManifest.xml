<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cinemar.phoneticket"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cinemar.phoneticket.LoginActivity"
            android:label="@string/app_name" 
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name="com.cinemar.phoneticket.RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName="com.cinemar.phoneticket.LoginActivity"
            android:windowSoftInputMode="adjustPan|stateVisible" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cinemar.phoneticket.LoginActivity" />
        </activity>
        <activity
            android:name="com.cinemar.phoneticket.MainMenuActivity"
            android:label="@string/title_activity_main_menu" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cinemar.phoneticket.MessageConfirmationActivity"
            android:label="@string/title_activity_message_confirmation" >
        </activity>
    </application>

</manifest>
